<h1>Pitches</h1>
<p>3 votes left</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pitches.each do |pitch| %>
      <tr>
        <td><%= link_to pitch.name, pitch_path(pitch) %></td>
        <td><%= pitch.description.first(100) %></td>
        <td><%= link_to "Vote", "#", :class => 'btn btn-success .btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

