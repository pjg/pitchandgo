<h1>Pitches</h1>
<p>3 votes left</p>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pitches.each do |pitch| %>
      <tr>
        <td><h2><%= link_to pitch.name, pitch_path(pitch) %></h3></td>
        <td><%= pitch.description.first(100) %></td>
        <td><h3><%= pitch.votes.count %></h3></td>
        <td><%= button_to "Undo", vote_pitch_path(pitch), :class => 'btn btn-danger .btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
